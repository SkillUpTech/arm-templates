{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string",
            "defaultValue": "[concat('vm-', variables('templateName'))]"
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_D2as_v4",
            "metadata": {
                "description": "VM size for the host."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "sshPublicKey": {
            "type": "securestring"
        },
        "baseURI": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/SkillUpTech/arm-templates/main/"
        },
        "dataDiskGB": {
            "type": "int",
            "defaultValue": 64
        },
        "nicName": {
            "type": "string",
            "defaultValue": "[concat('nic-', variables('templateName'))]"
        }
    },
    "variables": {
        "templateName": "focal-py38-docker",
        "templateDir": "[concat(uri(parameters('baseURI'), variables('templateName')), '/')]",
        "nicID": "[resourceId('Microsoft.Network/networkInterfaces/', parameters('nicName'))]",
        "customData": "[concat('#include\n', uri(variables('templateDir'), '/cloud-config.yaml'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "network",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('baseURI'), '/common/network.json')]"
                },
                "parameters": {
                    "templateName": { "value": "[variables('templateName')]" }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "vm",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('baseURI'), '/common/vm-with-storage.json')]"
                },
                "parameters": {
                    "templateName": { "value": "[variables('templateName')]" },
                    "nicID": { "value": "[variables('nicID')]" },
                    "vmName": { "value": "[parameters('vmName')]" },
                    "vmSize": { "value": "[parameters('vmSize')]" },
                    "authenticationType": { "value": "sshPublicKey" },
                    "adminPasswordOrKey": { "value": "[parameters('sshPublicKey')]" },
                    "customData": { "value": "[base64(variables('customData'))]" },
                    "dataDiskGB": { "value": "[parameters('dataDiskGB')]" },
                    "location": { "value": "[parameters('location')]" }
                }
            }
        }
    ]
}
