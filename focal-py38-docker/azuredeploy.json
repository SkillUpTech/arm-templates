{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "baseURI": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/SkillUpTech/arm-templates/main/focal-py38-docker"
        },
        "templateName": {
            "type": "string",
            "metadata": {
                "description": "Prefix to use for resource names."
            },
            "defaultValue": "focal-py38-docker"
        },
        "vmName": {
            "type": "string",
            "defaultValue": "[concat('vm-', parameters('templateName'))]"
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_D2as_v4",
            "metadata": {
                "description": "VM size for the host."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "sshPublicKey": {
            "type": "securestring"
        },
        "dataDiskGB": {
            "type": "int",
            "defaultValue": 64
        },
        "dnsName": {
            "type": "string",
            "metadata": {
                "description": "Unique DNS Name for the Public IP used to access the Virtual Machine."
            }
        }
    },
    "variables": {
        "baseDir": "[concat(parameters('baseURI'), '/')]",
        "customData": "[concat('#include\n', uri(variables('baseDir'), 'cloud-config.yaml'))]",
        "networkTemplateURI": "[uri(parameters('baseURI'), 'common/network.json')]",
        "vmTemplateURI": "[uri(parameters('baseURI'), 'common/vm-with-storage.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "network",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkTemplateURI')]"
                },
                "parameters": {
                    "templateName": { "value": "[parameters('templateName')]" },
                    "dnsName": { "value": "[parameters('dnsName')]" }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "vm",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vmTemplateURI')]"
                },
                "parameters": {
                    "templateName": { "value": "[parameters('templateName')]" },
                    "nicID": { "value": "[reference('network').outputs.nicID.value]" },
                    "vmName": { "value": "[parameters('vmName')]" },
                    "vmSize": { "value": "[parameters('vmSize')]" },
                    "authenticationType": { "value": "sshPublicKey" },
                    "adminPasswordOrKey": { "value": "[parameters('sshPublicKey')]" },
                    "customData": { "value": "[variables('customData')]" },
                    "dataDiskGB": { "value": "[parameters('dataDiskGB')]" },
                    "location": { "value": "[parameters('location')]" }
                }
            }
        }
    ]
}
