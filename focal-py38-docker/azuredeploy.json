{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string",
            "defaultValue": "[concat('vm-', variables('templateName'))]"
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_D2as_v4",
            "metadata": {
                "description": "VM size for the host."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "sshPublicKey": {
            "type": "securestring"
        },
        "baseURI": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/SkillUpTech/arm-templates/main/"
        },
        "dataDiskSize": {
            "type": "int",
            "defaultValue": 64
        },
        "nicName": {
            "type": "string",
            "defaultValue": "[concat('nic-', variables('templateName'))]"
        }
    },
    "variables": {
        "templateName": "focal-py38-docker",
        "templateDir": "[concat(uri(parameters('baseURI'), variables('templateName')), '/')]",
        "nicID": "[resourceId('Microsoft.Network/networkInterfaces/', parameters('nicName'))]",
        "customData": "[concat('#include\n', uri(variables('templateDir'), '/cloud-config.yaml'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "network",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('baseURI'), '/common/network.json')]"
                },
                "parameters": {
                    "templateName": "[variables('templateName')]"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "vm",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('baseURI'), '/common/vm-with-storage.json')]"
                },
                "parameters": {
                    "templateName": "[variables('templateName')]",
                    "nicID": "[variables('nicID')]",
                    "vmName": "[parameters('vmName')]",
                    "vmSize": "[parameters('vmSize')]",
                    "authenticationType": "sshPublicKey",
                    "adminPasswordOrKey": "[parameters('sshPublicKey')]",
                    "customData": "[base64(variables('customData'))]",
                    "dataDiskSize": "[parameters('dataDiskSize')]",
                    "location": "[parameters('location')]"
                }
            }
        }
    ]
}
